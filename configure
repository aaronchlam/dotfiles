#!/bin/bash
# Install and symlink dotfiles

dotfiles=$HOME/dotfiles

# Backup old dotfiles
if [ -d $dotfiles ]
then
  cp -r $dotfiles $dotfiles-old 2> /dev/null
fi

# Set up vim
ln -hfsv $dotfiles/vim $HOME/.vim
ln -hfsv $dotfiles/vim/vimrc $HOME/.vimrc

# Set up tmux
ln -hfsv $dotfiles/tmux/tmux.conf $HOME/.tmux.conf
